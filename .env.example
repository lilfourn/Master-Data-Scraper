# Environment Configuration Example
# Copy this file to .env and update with your values

# Debug mode
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Data directory path (relative or absolute)
DATA_DIR=./Data

# Request settings
DEFAULT_TIMEOUT=30
DEFAULT_DELAY=1.0
MAX_RETRIES=3

# User agent
USER_AGENT="MasterDataScraper/1.0"

# Rate limiting (requests per second)
RATE_LIMIT=1

# Cache settings
ENABLE_CACHE=True
CACHE_EXPIRY=3600  # seconds

# Export settings
DEFAULT_EXPORT_FORMAT=csv
COMPRESS_EXPORTS=False

# Domain-specific settings can be added here
# EXAMPLE_COM_DELAY=2.0
# EXAMPLE_COM_USER_AGENT="Custom User Agent"